<%= form_with model: @user, url:user_registration_path, class: "form-wrap", local: true do |f| %>

      <div class="form-header">
        <h1 class="catch-copy">新規登録</h1>
      </div>


<%= render 'shared/error_messages', model: f.object %>


      <div class="form-group">
        <div class="form-text-wrap">
          <span class="indispensable">必須</span>
          <label class="form-text">ニックネーム</label>
      </div>
        <%= f.text_area :nickname, class: "input-default" %>
      </div>

      <div class="form-group">
        <div class="form-text-wrap">
          <span class="indispensable">必須</span>
          <label class="form-text">メールアドレス</label>
      </div>
        <%= f.email_field :email, class: "input-default" %>
      </div>

      <div class="form-group">
        <div class="form-text-wrap">
          <span class="indispensable">必須</span>
          <label class="form-text">パスワード</label>
      </div>
        <%= f.password_field :password, class: "input-default" %>
         <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
      </div>

      <div class="form-group">
        <div class="form-text-wrap">
          <span class="indispensable">必須</span>
          <label class="form-text">パスワード確認</label>
      </div>
        <%= f.password_field :password, class: "input-default" %>
      </div>

      <div class="form-group">
        <div class="form-text-wrap">
          <span class="indispensable">必須</span>
          <label class="form-text">性別</label>
        </div>
          <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"input-select"}) %>
        </div>

        <div class="form-group">
          <div class="form-text-wrap">
            <span class="indispensable">必須</span>
            <label class="form-text">生年月日</label>
          </div>
         <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:"input-select",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1960,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
              </div>

              <div class="form-group">
                <div class="form-text-wrap">
                  <label class="form-text">自己紹介</label>
              </div>
              <%= f.text_area :self_introduction, class: "input-default form-profile" %>
              </div>

              <div class="form-group">
                <div class="form-text-wrap">
                  <label class="form-text">興味</label>
              </div>
              <%= f.text_area :interest, class: "input-default" %>
              </div>
        
              <div class="form-group">
                <div class="form-text-wrap">
                  <label class="form-text">職業</label>
              </div>
              <%= f.text_area :profession, class: "input-default" %>
              </div>
        
              <div class="form-group">
                <div class="form-text-wrap">
                  <label class="form-text">勤め先</label>
              </div>
              <%= f.text_area :work_place, class: "input-default" %>
              </div>

              <div class="form-group">
                <div class="form-text-wrap">
                  <label class="form-text">学歴</label>
              </div>
              <%= f.text_area :educational_background, class: "input-default" %>
              </div>

              <div class="form-group">
                <div class="form-text-wrap">
                  <label class="form-text">在住</label>
              </div>
              <%= f.text_area :resident, class: "input-default" %>
              </div>
      
        <%= f.submit "登録", class: "form-button" %>
        <% end %>
    
  </body>
    


